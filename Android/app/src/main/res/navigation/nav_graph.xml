<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/registrationFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.authorisation.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment_pop"
            app:popUpTo="@id/loginFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_mainFragment_pop"
            app:popUpTo="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.authorisation.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_loginFragment_to_mainFragment_pop"
            app:popUpTo="@id/mainFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_mainFragment_to_translationMainFragment"
            app:destination="@id/translationMainFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_mainFragment_to_policyFragment"
            app:destination="@id/policyFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/policyFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.policy.PolicyFragment"
        android:label="fragment_policy"
        tools:layout="@layout/fragment_policy">
        <action
            android:id="@+id/action_policyFragment_pop"
            app:popUpTo="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/translationMainFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.translation.translationMain.TranslationMainFragment"
        tools:layout="@layout/fragment_translation_main">
        <action
            android:id="@+id/action_translationMainFragment_to_addEditWordFragment"
            app:destination="@id/addEditWordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/addEditWordFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.translation.addEditWord.AddEditWordFragment"
        android:label="fragment_add_edit_word"
        tools:layout="@layout/fragment_add_edit_word">
        <action
            android:id="@+id/action_addEditWordFragment_pop"
            app:popUpTo="@id/addEditWordFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="wordTranslation"
            app:argType="ru.inwords.inwords.data.dto.WordTranslation" />
    </fragment>
    <fragment
        android:id="@+id/gamesFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.octo_game.games.GamesFragment"
        android:label="fragment_games"
        tools:layout="@layout/fragment_games">
        <action
            android:id="@+id/action_gamesFragment_to_gameLevelsFragment"
            app:destination="@id/gameLevelsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/gameLevelsFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.octo_game.gameLevels.GameLevelsFragment"
        android:label="fragment_game_levels"
        tools:layout="@layout/fragment_game_levels">
        <action
            android:id="@+id/action_gameLevelsFragment_to_gameLevelFragment"
            app:destination="@id/gameLevelFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <argument
            android:name="gameInfo"
            app:argType="ru.inwords.inwords.data.dto.game.GameInfo" />
    </fragment>
    <fragment
        android:id="@+id/gameLevelFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.octo_game.gameLevel.GameLevelFragment"
        android:label="fragment_game_level"
        tools:layout="@layout/fragment_game_level">
        <action
            android:id="@+id/action_gameLevelFragment_to_gameEndBottomSheet"
            app:destination="@id/gameEndBottomSheet" />
        <argument
            android:name="gameLevelInfo"
            app:argType="ru.inwords.inwords.data.dto.game.GameLevelInfo" />
        <argument
            android:name="gameId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.inwords.inwords.presentation.view_scenario.SettingsFragment"
        android:label="SettingsFragment" />

    <dialog
        android:id="@+id/gameEndBottomSheet"
        android:name="ru.inwords.inwords.presentation.view_scenario.octo_game.gameLevel.GameEndBottomSheet"
        android:label="GameEndBottomSheet" >
        <argument
            android:name="levelId"
            app:argType="integer" />
        <argument
            android:name="cardOpenClicksCount"
            app:argType="integer" />
        <argument
            android:name="cardsCount"
            app:argType="integer" />
        <action
            android:id="@+id/action_pop"
            app:popUpTo="@id/gameEndBottomSheet"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_popUpTo_gameLevelFragment_inclusive"
            app:popUpTo="@id/gameLevelFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_popUpTo_mainFragment"
            app:popUpTo="@id/mainFragment" />
    </dialog>

    <action
        android:id="@+id/action_global_mainFragment"
        app:destination="@id/mainFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_right" />
    <action
        android:id="@+id/action_global_translationMainFragment"
        app:destination="@id/translationMainFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_right" />

</navigation>