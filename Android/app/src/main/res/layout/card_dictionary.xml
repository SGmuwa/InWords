<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/medium_card_elevation">

    <ImageView
        android:id="@+id/dict"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/half_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_marginBottom="@dimen/half_margin"
        android:contentDescription="@string/avatar"
        android:elevation="@dimen/medium_card_elevation"
        android:src="@drawable/ic_dictionary" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="@dimen/half_margin"
        android:elevation="@dimen/medium_card_elevation"
        android:ellipsize="end"
        android:lines="1"
        android:paddingStart="@dimen/half_margin"
        android:paddingEnd="@dimen/half_margin"
        android:text="@string/dictionary_title"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/dictSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="@dimen/half_margin"
        android:elevation="@dimen/medium_card_elevation"
        android:ellipsize="end"
        android:lines="1"
        android:paddingStart="@dimen/half_margin"
        android:paddingEnd="@dimen/half_margin"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        tools:text="@string/words_in_dictionary" />

</androidx.cardview.widget.CardView>