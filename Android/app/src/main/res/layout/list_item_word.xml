<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="horizontal"
    android:padding="@dimen/margin_medium">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/half_margin"
        android:layout_marginEnd="@dimen/margin_extra_large"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_word_native"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Обычная фраза" />

        <TextView
            android:id="@+id/tv_word_foreign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Simple phrase" />
    </LinearLayout>

    <ImageView
        android:id="@+id/speaker_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:contentDescription="@string/voice_translation"
        android:paddingStart="@dimen/margin_medium"
        android:paddingTop="@dimen/half_margin"
        android:paddingEnd="@dimen/half_margin"
        android:paddingBottom="@dimen/half_margin"
        android:src="@drawable/ic_volume_up_black_24dp"
        app:tint="@color/colorPrimary" />
</FrameLayout>