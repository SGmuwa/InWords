<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.viewScenario.home.HomeFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:gravity="center"
        android:text="Здесь будет красивый профиль, а пока политика конфиденциальности"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/kran"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kran"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <TextView
        android:id="@+id/to_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:drawableStart="@drawable/ic_account_circle_secondary_24dp"
        android:drawablePadding="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_medium"
        android:paddingTop="@dimen/half_margin"
        android:paddingEnd="@dimen/margin_medium"
        android:paddingBottom="@dimen/half_margin"
        android:text="@string/change_account"
        android:textAppearance="@style/TextAppearance.Inwords.Subtitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kran" />

    <TextView
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:drawableStart="@drawable/ic_settings_secondary_24dp"
        android:drawablePadding="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_medium"
        android:paddingTop="@dimen/half_margin"
        android:paddingEnd="@dimen/margin_medium"
        android:paddingBottom="@dimen/half_margin"
        android:text="@string/settings"
        android:textAppearance="@style/TextAppearance.Inwords.Subtitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_login_button" />

    <TextView
        android:id="@+id/policy_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_margin"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/policy_privacy_agreement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>