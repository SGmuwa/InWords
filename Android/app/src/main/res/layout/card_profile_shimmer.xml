<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/medium_card_elevation">

    <View
        android:id="@+id/avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/half_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_marginBottom="@dimen/half_margin"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/shimmerColor"
        android:contentDescription="@string/avatar"
        android:elevation="@dimen/medium_card_elevation" />

    <View
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_24sp_box"
        android:layout_marginStart="80dp"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_marginEnd="@dimen/half_margin"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/shimmerColor"
        android:elevation="@dimen/medium_card_elevation" />

    <View
        android:id="@+id/experience"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_16sp_box"
        android:layout_gravity="bottom"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="@dimen/half_margin"
        android:layout_marginBottom="@dimen/half_margin"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/shimmerColor"
        android:elevation="@dimen/medium_card_elevation" />
</androidx.cardview.widget.CardView>